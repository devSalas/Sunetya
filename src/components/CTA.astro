---
import { ArrowRight } from 'lucide-react';
import { ctaSectionContent, LinkWhatsapp } from '../content/siteContent';
---

<section class="py-20 bg-purple-600">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl font-bold text-white mb-8">
      {ctaSectionContent.title}
    </h2>
    <p class="text-xl text-purple-100 mb-12 max-w-2xl mx-auto">
      {ctaSectionContent.subtitle}
    </p>
    <a href={LinkWhatsapp.href} target="_blank" class="bg-white text-purple-600 px-8 py-3 rounded-full hover:bg-purple-50 transition-colors inline-flex items-center gap-2">
      {ctaSectionContent.button}
      <ArrowRight size={20} />
    </a>
  </div>
</section>
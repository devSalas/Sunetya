---
import { processContent } from '../content/siteContent';
---

<section id="process" class="py-20 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-4xl font-bold mb-4">{processContent.title}</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">{processContent.subtitle}</p>
    </div>
    
    <div class="mt-12 grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {processContent.steps.map((step) => (
        <div class="text-center">
          <div class="text-4xl font-bold text-purple-600 mb-4">{step.number}</div>
          <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
          <p class="text-gray-600">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
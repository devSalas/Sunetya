---
interface Achievement {
  number: string;
  label: string;
}

const achievements: Achievement[] = [
  { number: "150+", label: "Proyectos Completados" },
  { number: "98%", label: "Clientes Satisfechos" },
  { number: "10+", label: "Años de Experiencia" },
  { number: "25+", label: "Premios Ganados" },
];

const technologies = [
  "React",
  "Vue",
  "Angular",
  "Node.js",
  "Python",
  "AWS",
  "Docker",
  "TypeScript",

---
import { Palette, Code, Users } from 'lucide-react';
import { servicesContent } from '../content/siteContent';

const icons = [
  { Icon: Palette, color: 'text-purple-600' },
  { Icon: Code, color: 'text-purple-600' },
  { Icon: Users, color: 'text-purple-600' }
];
---

<section id="services" class="py-20 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-4xl font-bold mb-4">{servicesContent.title}</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">{servicesContent.subtitle}</p>
    </div>
    
    <div class="mt-12 grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {servicesContent.services.map((service, index) => (
        <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-shadow hover:-translate-y-1 duration-300">
          <div class="mb-6">
            {icons[index] && <icons[index].Icon className={`w-12 h-12 ${icons[index].color}`} />}
          </div>
          <h3 class="text-xl font-semibold mb-4">{service.title}</h3>
          <p class="text-gray-600">{service.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
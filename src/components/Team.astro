---
interface TeamMember {
  name: string;
  role: string;
  image: string;
  description: string;
  socials: {
    github: string;
    linkedin: string;
  };
}

const team: TeamMember[] = [
  {
    name: "Gerson Garayar",
    role: "Desarrollador Web",
    image: "https://media.licdn.com/dms/image/v2/D4E03AQFAca5RFihqpg/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1676560028848?e=1737590400&v=beta&t=gmTOtQd9nUhK6VhZw7ongdOiBSwFP2Kar7qw5_XvP1Y",
    description: "Especialista en arquitectura de software y desarrollo full-stack con 8 años de experiencia.",
    socials: {
      github: "https://github.com",
      linkedin: "https://linkedin.com"
    }
  },
  {
    name: "Esteban Salas Sulca",
    role: "Desarrollador Web",
    image: "https://media.licdn.com/dms/image/v2/D4E03AQEqtGMak8fWzg/profile-displayphoto-shrink_800_800/profile-displayphoto-shrink_800_800/0/1700932638453?e=1737590400&v=beta&t=qlyo2jnowsAjGvA5UJrRUGGdHorHIIc6LNORI8eQ63M",
    description: "Experta en React y diseño UI/UX, apasionada por crear experiencias de usuario excepcionales.",
    socials: {
      github: "https://github.com",
      linkedin: "https://linkedin.com"
    }
  },
  {
    name: "David Kumar",
    role: "Backend Developer",
    image: "https://images.unsplash.com/photo-1519085360753-af0119f7cbe7?auto=format&fit=crop&q=80&w=400",
    description: "Especialista en Node.js y bases de datos, con experiencia en arquitecturas cloud-native.",
    socials: {
      github: "https://github.com",
      linkedin: "https://linkedin.com"
    }
  }
];
---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl font-bold text-slate-800 mb-4">
        Nuestro Equipo
      </h2>
      <div class="w-20 h-1 bg-indigo-600 mx-auto mb-6"></div>
      <p class="text-lg text-slate-600">
        Conoce a los expertos detrás de nuestras soluciones digitales
      </p>
    </div>

    <div class="grid md:flex justify-center items-center gap-8 ">
      {team.map((member) => (
        <div class="bg-slate-50 rounded-xl p-6 transition-transform hover:-translate-y-2 duration-300 max-w-[300px] " data-aos="fade-up">
          <div class="relative mb-6">
            <img 
              src={member.image} 
              alt={member.name}
              class="w-full h-64 object-cover rounded-lg"
            />
            <div class="absolute inset-0 bg-indigo-600 opacity-0 hover:opacity-10 rounded-lg transition-opacity duration-300"></div>
          </div>
          
          <h3 class="text-xl font-bold text-slate-800 mb-2">{member.name}</h3>
          <p class="text-indigo-600 font-medium mb-4">{member.role}</p>
          <p class="text-slate-600 mb-6">{member.description}</p>
          
          <div class="flex justify-center gap-4">
            <a 
              href={member.socials.github}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-600 hover:text-indigo-600 transition-colors"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
              </svg>
            </a>
            <a 
              href={member.socials.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="text-slate-600 hover:text-indigo-600 transition-colors"
            >
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>